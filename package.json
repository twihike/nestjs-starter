{
  "name": "nestjs-starter",
  "version": "0.1.0",
  "description": "NestJS starter repository.",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "format": "eslint --fix '{src,apps,libs,test}/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate -f src/typeorm/ormconfig.postgres.ts -n",
    "migration:show": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:show -f src/typeorm/ormconfig.postgres.ts",
    "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -f src/typeorm/ormconfig.postgres.ts",
    "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:revert -f src/typeorm/ormconfig.postgres.ts",
    "schema:log": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js schema:log -f src/typeorm/ormconfig.postgres.ts",
    "doc": "compodoc -p tsconfig.json -s"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,mjs,jsx,ts,tsx}": "eslint"
  },
  "prettier": "@tkhiking/prettier-config",
  "dependencies": {
    "@godaddy/terminus": "4.4.1",
    "@nestjs/common": "7.3.2",
    "@nestjs/core": "7.3.2",
    "@nestjs/graphql": "7.5.5",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/microservices": "7.3.2",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-express": "7.3.2",
    "@nestjs/swagger": "4.5.12",
    "@nestjs/terminus": "7.0.1",
    "@nestjs/typeorm": "7.1.0",
    "@nestjs/websockets": "7.3.2",
    "apollo-server-express": "2.15.1",
    "bcrypt": "5.0.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "compression": "1.7.4",
    "graphql": "15.3.0",
    "graphql-tools": "6.0.13",
    "helmet": "3.23.3",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-mock-strategy": "2.0.0",
    "pg": "8.3.0",
    "pluralize": "8.0.0",
    "reflect-metadata": "0.1.13",
    "rxjs": "6.6.0",
    "sqlite3": "5.0.0",
    "swagger-ui-express": "4.1.4",
    "type-graphql": "1.0.0-rc.3",
    "typeorm": "0.2.25"
  },
  "devDependencies": {
    "@compodoc/compodoc": "1.1.11",
    "@nestjs/cli": "7.4.1",
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.3.2",
    "@tkhiking/node-toolchain": "0.1.6",
    "@types/bcrypt": "3.0.0",
    "@types/express": "4.17.7",
    "@types/jest": "26.0.4",
    "@types/node": "14.0.23",
    "@types/passport-jwt": "3.0.3",
    "@types/pluralize": "0.0.29",
    "@types/supertest": "2.0.10",
    "jest": "26.1.0",
    "supertest": "4.0.2",
    "ts-jest": "26.1.2",
    "ts-loader": "8.0.1",
    "tsconfig-paths": "3.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
